{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "./units",
  "testEnvironment": "node",
  "testRegex": ".e2e.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "reporters": [
    "default",
    ["jest-junit", { "outputDirectory": "./test/logs", "outputName": "e2e-junit.xml" }]
  ]
}